{{!-- saved handlebar container - to report the scraped articles that are saved for future and comment ability     --}}
<div class="container">
	{{!-- for each article --}}
    {{#each article}}
		{{!-- bootstrap card to store the return data --}}
        <div class="card">
			{{!-- REPORT OUT THE TITLE, SUMMARY, AND LINK --}}
            <h3 class="card-header">{{this.title}}</h3>
            <div class="row">
                <div class="col-lg-8 card-block">
                    <p class="card-text">{{this.summary}}</p>
                    <a href="http://www.bbc.com{{this.link}}" target="_blank" class="card-link">Read more</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>
